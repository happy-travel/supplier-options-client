<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Copyright>HappyTravel.com</Copyright>
        <Authors>Vadim Mingazhev</Authors>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <NeutralLanguage>en</NeutralLanguage>
        <Description>Supplier options client</Description>
        <PackageReleaseNotes>Added activation and deactivation methods</PackageReleaseNotes>
        <PackageProjectUrl>https://github.com/happy-travel/supplier-options-client</PackageProjectUrl>
        <RepositoryURL>https://github.com/happy-travel/supplier-options-client</RepositoryURL>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Version>0.2.0</Version>
        <OutputType>Library</OutputType>
        <IsPackable>True</IsPackable>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="CSharpFunctionalExtensions" Version="2.28.0" />
        <PackageReference Include="IdentityModel.AspNetCore" Version="4.1.2" />
        <PackageReference Include="Microsoft.Extensions.Http" Version="5.0.0" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    </ItemGroup>

</Project>
